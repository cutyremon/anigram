<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo"><%= fa_icon "instagram" %> |
      <%= t("AniGram") %></a>
    <a style="margin-left: 193px;"><%= link_to "English", locale: "en" %></a>
    <a><%= link_to "日本語", locale: "nh" %></a>
    <% if logged_in? %>
      <%= form_tag users_path, method: "get", class: "users-search" do %>
        <%= text_field_tag :search, params[:search], class: "search-box", placeholder: t("Search") %>
      <% end %>
    <% end %>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" charset="dropdown-toggle" data-toggle="dropdown">
            <% count = 0 %>
            <% current_user.notifications.each do |notification| %>
              <% if !notification.read %>
                <% count += 1 %>
              <% end %>
            <% end %>
            <% if count == 0 %>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
            <% else %>
              <span class="glyphicon glyphicon-heart" style="color: #fa3e3e;" aria-hidden="true"></span>
            <% end %>
          </a>
          <ul class="dropdown-menu notifi-dropdown">
            <li>Notifications</li>
            <%= render current_user.notifications.order('id DESC').first(3) %>
            <li>
              <%= link_to t("view all"), notifications_path %>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to current_user do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <% end %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("Settings"), edit_user_path(current_user) %></li>
            <li><%= link_to t("Log out"), logout_path, method: "delete" %></li>
          </ul>
        </li>
      <% else %>
        <li><a href="#about-path" onclick="internal_link_click(this)"><%= I18n.t("about") %></a></li>
        <li><a href="#portfolio-path" onclick="internal_link_click(this)"><%= t "portfolio" %></a></li>
        <li><a href="/login"><%= t "sign_in" %></a></li>
        <!--<li> dsddd</li>-->
      <% end %>
    </ul>
  </div>
</nav>