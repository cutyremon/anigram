<div id="login-box">
  <div class="left-block">
    <h1><%= t("Sign in")%></h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.email_field :email, placeholder: "JohnCena@gmail.com", class: "form-control" %>

      <%= f.password_field :password, placeholder: t("Password"), class: "form-control" %>

      <% if @error != "" %>
        <p class="error-messages"><%= @error %></p>
      <% end %>

      <%= f.check_box :remember_me, class: "filled-in" %>
      <%= f.label :remember_me, t("Remember me on this computer") %>

      <%= f.submit t("Lets Go") %>
    <% end %>
    <br><br>
    <a href="/auth/google_oauth2"><%= t("sigin with google") %></a>
    <br>
    <a href="/auth/facebook"><%= t("sigin with facebook") %></a>

    <p>New Users? <%= link_to t("Lets Join With Us"), signup_path %></p>
  </div>
</div>
