<div id="login-box">
  <div class="left-block">
    <h1>Sign in</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.email_field :email, placeholder: "JohnCena@gmail.com", class: "form-control" %>

      <%= f.password_field :password, placeholder: "Password", class: "form-control" %>

      <% if @error != "" %>
        <p class="error-messages"><%= @error %></p>
      <% end %>

      <%= f.check_box :remember_me, class: "filled-in" %>
      <%= f.label :remember_me, t("Remember me on this computer") %>

      <%= f.submit t("Lets Go") %>
    <% end %>
    <br><br>
    <%= link_to t("Sign in with Facebook"), user_facebook_omniauth_authorize_path %>
    <%= link_to "Authenticate with Google!", google_omniauth_authorize_path %>
    <p>New Users? <%= link_to t("Lets Join With Us"), signup_path %></p>
  </div>
</div>
